{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "module": "model.MNIST_model",
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "module": "data_loader.MNIST_data_loader",
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.5,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy_MNIST", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module": "trainer.MNIST_trainer",
        "type": "MNISTTrainer",
        "epochs": 3,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 1,
        "monitor": "max val_accuracy_MNIST",
        "early_stop": 10,
        "tensorboard": true,
        "best_metrics_log": "epoch loss accuracy_MNIST val_loss val_accuracy_MNIST"
    },
    "tester": {
        "module": "tester.MNIST_tester",
        "type": "MNISTTester",
        "verbosity": 1,
        "metrics_log": "loss accuracy_MNIST",
        "tensorboard": true
    }
}
