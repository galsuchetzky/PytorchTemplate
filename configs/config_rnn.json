{
    "name": "SimpleRNN_Encoder_Decoder",
    "n_gpu": 1,
    "arch": {
        "module": "model.BREAK_model",
        "type": "EncoderDecoder",
        "args": {
            "batch_size": "constants.batch_size",
            "enc_input_size": 256,
            "dec_input_size": 256,
            "enc_hidden_size": 256,
            "dec_hidden_size": 256,
            "vocab": {
                "module": "data_loader.vocabs",
                "type": "BREAK_vocab_simple",
                "args": {}
            }
        }
    },
    "data_loader": {
        "module": "data_loader.BREAK_data_loader",
        "type": "BREAKDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": "constants.batch_size",
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        },
        "question_pad_length": 64,
        "qdmr_pad_length": 256
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CrossEntropyLoss",
    "metrics": {
        "train_metrics": ["exact_match", "sari_score"],
        "eval_metrics": ["exact_match", "sari_score", "structural_match_ratio"],
        "test_metrics": ["exact_match", "sari_score", "structural_match_ratio"]
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module" : "trainer.BREAK_trainer",
        "type": "Seq2SeqSimpleTrainer",
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 1,
        "monitor": "max val_sari_score",
        "early_stop": 10,
        "tensorboard": true,
        "best_model_metrics_log": "epoch loss val_loss val_exact_match val_sari_score val_structural_match_ratio"
    },
    "tester": {
        "module" : "tester.BREAK_tester",
        "type": "Seq2SeqSimpleTester",
        "verbosity": 1,
        "tensorboard": true
    },
    "debug": {
        "examples_amount": 100
    },
    "constants" : {
        "batch_size": 32
    }
}
