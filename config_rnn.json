{
    "name": "SimpleRNN_Encoder_Decoder",
    "n_gpu": 1,

    "arch": {
        "type": "EncoderDecoder",
        "args": {
            "enc_input_size": 256,
            "dec_input_size": 256,
            "enc_hidden_size": 256,
            "dec_hidden_size": 256,
            "vocab": {
                "module": "data_loader.vocabs",
                "type": "BREAK_vocab_simple",
                "args": {}
            }
        }
    },

    "data_loader": {
        "type": "BREAKDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CrossEntropyLoss",
    "metrics": [
        "accuracy_qdmr"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Seq2SeqSimpleTrainer",

        "epochs": 10,

        "vocab": {
            "module": "data_loader.vocabs",
            "type": "BREAK_vocab_simple",
            "args": {}
        },

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 1,
        
        "monitor": "max val_accuracy_qdmr",
        "early_stop": 10,

        "tensorboard": true,
        "best_metrics_log": "epoch loss accuracy_qdmr val_loss val_accuracy_qdmr"
    }
}
